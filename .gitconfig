[alias]
    last = log -1
    recent = log -3
    present = log -5
    mod = config --global --edit
    unstage = reset HEAD --
    discard = reset --hard
    logg = log --graph --decorate
    fpush = push --force-with-lease
    rewrite = "!git rebase -i $(git merge-base $(git parent-branch) HEAD)"
    amend = commit --amend
    ldiff = diff HEAD^ HEAD
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
